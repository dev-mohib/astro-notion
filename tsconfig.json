{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": "./src/",
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "paths": {
      "@assets/*": [
        "assets/*"
      ],
      "@/*" : [
        "*"
      ],
      "@config": [
        "config.ts"
      ],
      "@components/*": [
        "components/*"
      ],
      "@content/*": [
        "content/*"
      ],
      "@layouts/*": [
        "layouts/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@lib/*": [
        "lib/*"
      ]
    },
    "jsxImportSource": "react"
  }
}