<style>
    .hero{
		/* height: 60vh; */
		position: relative;
		background: radial-gradient(circle closest-side at 20% 50%,
		rgba(255,255,255,0) 50%,
		rgba(0,0,0, 0.5)), no-repeat left/60% url('/sky.webp');
	}
    .services{
    background: linear-gradient( rgba(0,0,0,1), rgba(0,0,0,0), rgba(0,0,0,1)),
        center/cover no-repeat url('/night-trees.jpg');
    }
    .services .card{
        @apply bg-base-200 rounded-lg px-2 py-5
    }
    .services .card{
        background: rgba(0, 0, 0, 0.34);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(1.5px);
        -webkit-backdrop-filter: blur(1.5px);
        border: 1px solid rgba(0, 0, 0, 0.3);
    }
    .projects .card{
    @apply bg-blue-400 h-40 border-4
}

.sticky-section {
            position: relative;
            z-index: 1;
        }
	.sticky-side{
		position: sticky;
		top: 70px;
		right: 0;
	}
	.sticky-image {
		position: sticky;
		top: 0;
		height: 100vh; 
		background: linear-gradient( rgba(0,0,0,1), rgba(0,0,0,0), rgba(0,0,0,1)),
		center/cover no-repeat url('/night.jpg');
		z-index: -1;
	}
    .tools{
    background: linear-gradient( rgba(0,0,0,1), rgba(0,0,0,0), rgba(0,0,0,1)),
		center/cover no-repeat url('/mini-lights.jpg');
    }
    .tools-grid .card{
        @apply bg-base-200 rounded-lg px-2 py-5;
        background: rgba(0, 0, 0, 0.69);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(1.5px);
        -webkit-backdrop-filter: blur(1.5px);
        border: 1px solid rgba(0, 0, 0, 0.3);
    }

