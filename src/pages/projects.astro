---
import Layout from "@/layouts/Layout.astro";
const projects = [
    {image : "augle.gif", title : "Animatix"},
    {image : "motionlayer.gif", title : "LayerCraft"},
    {image : "codeyolo.gif", title : "Codeyolo"},
    {image : "rewardwee.png", title : "Rewardwee"}
    ]
---
<Layout>
    <div class="pt-28 lg:px-10 px-4 md:px-5">
        <h1 class="text-2xl font-bold my-10">Featured Projects</h1>
        {
        projects.map((project, index) => 
            <div class={`flex flex-col ${index % 2==0 ? 'lg:flex-row' : 'lg:flex-row-reverse'} lg:flex-row lg:h-[300px] mb-10 rounded-lg`}>
                <div class="lg:w-1/2 h-[300px] flex-r-c">
                    <img class="h-[230px]" src={`/public/${project.image}`} />
                </div>
                <div class="lg:w-1/2 lg:h-[300px]">
                    <div class="flex-r-c [&_li]:py-2 [&_li]:text-base-100">
                        <div class="lg:px-10">
                            <h1 class="py-4 text-2xl font-bold">{project.title}</h1>
                            <ul class=" ">
                                <li>Feature 1</li>
                                <li>Feature 2</li>
                                <li>Feature 3</li>
                                <li>Feature 4</li>
                            </ul>
                            <button class="btn !rounded-md my-4">Live</button>
                        </div>
                        <div class="lg:px-10 mt-14">
                            <ul>
                                <li>Feature 1</li>
                                <li>Feature 2</li>
                                <li>Feature 3</li>
                                <li>Feature 4</li>
                            </ul>
                            <button class="btn !bg-base-200 !rounded-md my-4">Read</button>
                        </div>
                    </div>
                </div>
            </div>
            )
        }
    </div>
</Layout>